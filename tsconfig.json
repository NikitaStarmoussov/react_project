{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": false,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ES2020",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    }
    // "plugins": [{ "name": "typescript-plugin-css-modules" }],
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
